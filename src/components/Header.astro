---
import ThemeButton from "@components/ThemeButton.astro";
import Button from "@components/Button.astro";
interface MenuProps {
    menus: {
        href: string;
        label: string;
    }[];
}
const { menus } = Astro.props as MenuProps;
---

<header class="w-full bg-primary sticky top-0 z-50">
    <div class="max-w-4xl mx-auto px-6 border-b border-secondary/10 py-4 flex items-center justify-end">
        <div class="header-container flex gap-5 items-center">
            <nav class="header-nav">
                <ul class="nav-list flex items-center w-full gap-6 *:text-gray-600 dark:*:text-gray-300 *:font-medium">
                    {
                        menus.map(({ href, label }) => (
                            <li class="nav-item">
                                <a class="nav-link hover:text-white transition-colors"
                                    href={href}
                                >
                                    {label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </nav>
            <div class="flex items-center gap-4 ml-4 border-l border-secondary/10 pl-4">
                <ThemeButton />
                <Button label="CV" href="" />
            </div>
        </div>
    </div>
</header>
