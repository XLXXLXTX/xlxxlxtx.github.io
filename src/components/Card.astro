---
interface CardProps {
    username: string;
    label: string;
    link: string;
    icon: string;
}

const { username, label, link, icon } = Astro.props as CardProps;
---

<a href={link}
    target="_blank"
    rel="noopener noreferrer"
    class="group flex items-start justify-between w-full p-5 bg-button-primary border border-tertiary/10 rounded-2xl transition-all duration-300 hover:scale-[1.01] hover:shadow-xl"
>
    <div class="flex items-center gap-4">
        {/* icon of social media*/}
        <iconify-icon {icon} width="48" class="text-primary shrink-0 opacity-90 group-hover:opacity-100"></iconify-icon>
        <div class="flex flex-col">
            <h3 class="font-bold text-primary text-lg leading-tight">{label}</h3>
            <p class="text-primary/70 text-sm font-medium">{username}</p>
        </div>
    </div>

    {/* arrow icon */}
    <iconify-icon
        icon="mdi:arrow-top-right"
        width="24"
        class="text-primary/50 group-hover:text-primary transition-all group-hover:translate-x-0.5 group-hover:-translate-y-0.5 duration-300"
    ></iconify-icon>
</a>
