---
import personal from "../data/personal.json";

const currentYear = new Date().getFullYear();

interface SocialProp {
    label: string;
    icon: string;
    link: string;
    username?: string;
}
const { github, linkedin } = Astro.props as { github: SocialProp; linkedin: SocialProp };

---

<footer class="max-w-4xl mx-auto mt-20 pb-10 px-4">
    <div class="border-t border-tertiary/10 w-full mb-8"></div>

    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
        <div class="flex flex-col items-center md:items-start gap-1">
            <p class="text-tertiary text-sm font-medium">
                Â© {currentYear}
                <span class="text-secondary">{personal.name}</span>
            </p>
            <p class="text-tertiary/60 text-xs">
                Developed with Astro & TailwindCSS
            </p>
        </div>

        <nav class="flex gap-5">
            {linkedin && (
                <a href={linkedin.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    title={linkedin.label}
                    class="text-tertiary hover:text-secondary transition-all duration-300 hover:-translate-y-1"
                >
                    <iconify-icon icon={linkedin.icon} width="24" height="24" />
                </a>
            )}
            {github && (
                <a href={github.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    title={github.label}
                    class="text-tertiary hover:text-secondary transition-all duration-300 hover:-translate-y-1"
                >
                    <iconify-icon icon={github.icon} width="24" height="24" />
                </a>
            )}
        </nav>
    </div>
</footer>
