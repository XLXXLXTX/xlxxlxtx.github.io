---
import Card from "@components/Card.astro";

interface SocialsProps {
    github: {
        label: string;
        icon: string;
        link: string;
        username: string;
    };
    linkedin: {
        label: string;
        icon: string;
        link: string;
        username: string;
    };
}

const { github, linkedin } = Astro.props as SocialsProps;
---

<section id="socials" class="max-w-4xl mx-auto py-5">
    <h2 class="text-3xl font-bold text-secondary mb-5">Socials</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <Card label={linkedin.label} username={linkedin.username}
            link={linkedin.link} icon={linkedin.icon} />

        <Card label={github.label} username={github.username}
            link={github.link} icon={github.icon} />
    </div>
</section>
