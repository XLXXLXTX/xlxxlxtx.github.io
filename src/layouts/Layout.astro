---
import Base from "@components/Base.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

const { title, description, menus = [], footer } = Astro.props;
---

<html lang="en">
    <head>
        <Base {title} {description} />
    </head>
    <body>
        <Header {menus} />
        <main class="w-full max-w-275 px-8 sm:px-6 md:px-8 mx-auto">
            <slot />
        </main>
        <Footer {...footer} />
    </body>
</html>
